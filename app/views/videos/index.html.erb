<%= flash[:notice] if flash[:notice] %>

<h1> Videos Administration </h1>
<h6 class="video_nbr"><%= pluralize @videos.size, 'Video' %></h6>

<%= link_to "Add A New Video",  new_video_path, class: ".btn btn-success space-link" %>

<% @videos.each do |video| %>

<article>
  <table class="video_table">
   <tr>
     <td>
       <%= video_tag(video.video_url.to_s, poster: video.image_placeholder, controls: true, autobuffer: true, class: 'video_thumbnail') %>
     </td>
     <td>
       <dl>
         <dt><%= link_to video.title, video_path(video) %></dt>
         <dd><%= video.description %></dd>
       </dl>
     </td>
     <td>
       <%= link_to 'Show', video_path(video), class: ".btn btn-primary space-link" %><br /><br/>
       <%= link_to 'Edit',  edit_video_path(video), class: ".btn btn-inverse space-link" %><br/><br/>
       <%= link_to 'Destroy', video_path(video),class: ".btn btn-danger space-link", method: :delete, data: {confirm: 'Are you sure?'} %>
     </td>
   </tr>
  </table>

  
  
</article>

<% end %>
