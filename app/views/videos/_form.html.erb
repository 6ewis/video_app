<%= form_for @video, html: {multipart: true} do |f| %>
	  <% if @video.errors.any? %>
	    <h2><%= pluralize(@video.errors.count, "error") %><br />
	    The video couldn't be saved:
	    </h2>
    
	    <ul>
	    <% @video.errors.full_messages.each do |error| %>
	    <li> <%= error %> </li>
	    <% end %>
	    </ul>
	<% end %>
    
    <fieldset>

    <legend>Enter Video Details</legend>
	<%= f.label :title %><br/>
	<%= f.text_field :title %><br/>

	<%= f.label :description %><br/>
	<%= f.text_area :description, rows: 6 %><br/>

	<%= f.label :video %><br/>
	<%= f.file_field :video %><br/>
	
	<%= f.label :poster_url %><br/>
	<%=f.text_field :poster_url %><br/>

	<%= f.label :price %><br />
	<%= f.number_field :price %><br/>

	<%=f.submit %>

<% end %>

</fieldset>