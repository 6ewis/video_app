%h2 Your current Cart
%table
  - @cart.line_items.each do |item|
    %tr
      %td
        = item.quantity
        &times;
      %td
        = item.video.title
      %td
        = number_to_currency(item.total_price)
  %br/
  %tr
    %td
      Total Amount:
    %td
      =  number_to_currency(@cart.total_price) 

%br/
= button_to 'Checkout', new_order_path, class: "btn btn-success", method: :get
= button_to 'Empty cart', @cart, class: "btn", method: :delete, data: {confirm: 'Are you sure?'}
= link_to 'Continue shopping', store_path, class: "btn btn-primary"