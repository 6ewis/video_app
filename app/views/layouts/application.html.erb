<!DOCTYPE html>
<html>
<head>
  <title>Videos Online Store</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="banner">
      <%= image_tag("logo.png") %>
    </div>

	<div id="columns">
	     <div id="side">
	       <ul>
	         <li><%= link_to 'Store', store_path %></li>
	         <% if session[:cart_id] %>
	         <li><%= link_to 'Cart', cart_path(session[:cart_id]) %></li>
	         <% end %>
	         <li><a href='#'>About Us<a/></li>
	       </ul>
	     </div>
	 
	    <div id="main">
	      <%= yield %>
	    </div>
	</div>

</body>
</html>
